@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WatchStore.Models.KHACHHANG>
@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>KHÁCH HÀNG</h2>
<br />
@using (Html.BeginForm("DanhSachKhachHang", "QlyKhachHang", FormMethod.Get))
{
    <div class="col-lg-5">
        <div class="input-group custom-search-form">
            <input type="text" class="form-control" value="@ViewBag.TuKhoa" placeholder="Tìm kiếm theo tên" name="timkiem">
            <span class="input-group-btn">
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
}
<br />
<hr />
@if (TempData["thongbao"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <strong>@TempData["thongbao"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
<table  id="customers">
    <thead>
        <tr>
            <th>
                Mã KH
            </th>
            <th>
                Họ tên
            </th>

            <th>
                Địa chỉ
            </th>
            <th>
               Email
            </th>
            <th>
               SĐT Khách hàng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DiachiKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienthoaiKH)
                </td>
                <td>
                    @Html.ActionLink(" ", "HienThiKH", new { @makh = item.MaKH }, new { @class = "fa fa-eye btn btn-primary btn-sm", @title = "Xem chi tiết" })
                    @*
        @Html.ActionLink(" ", "Xoa", new { @makh = item.MaKH }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Xoá khách hàng" })

                    *@
                </td>
          
            </tr>
        }
    </tbody>
</table>
@*Tạo link liên kết các trang*@

<div>
    @Html.PagedListPager(Model, page => Url.Action("DanhSachKhachHang", new { @timkiem = @ViewBag.TuKhoa, page = page }))
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

