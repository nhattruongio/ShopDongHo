
@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WatchStore.Models.DONGHO>


@{
    ViewBag.Title = "Quản lý sản phẩm ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
<br />
<h3 class="tittle-w3layouts text-center my-lg-4 my-4">Danh sách sản phẩm</h3>
<hr />

@using (Html.BeginForm("QuanLySanPham", "QlySanPham", FormMethod.Get))
{
    <div class="col-lg-8">
        <div class="input-group custom-search-form">
            <input type="text" class="form-control" value="@ViewBag.TuKhoa" placeholder="Tìm kiếm theo tên" name="timkiem">
            <span class="input-group-btn">
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </span>
            <div class="col-lg-4">
                @Html.ActionLink("Thêm mới", "ThemMoi", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
<br />
<hr />
@if (TempData["tb"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <strong>@TempData["tb"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<table id="customers">
    <thead>
        <tr>
            <th>
                <label>Mã sản phẩm</label>
            </th>
            <th>
                <label>Tên</label>
            </th>
            <th>
                <label>Ảnh Bìa</label>
            </th>
            <th>
                <label>Ảnh 1</label>
            </th>
            <th>
                <label>Ảnh 2</label>
            </th>
            <th>
                <label>NSX</label>
            </th>
            <th>
                <label>Số lượng</label>
            </th>
            <th>
                <label>Giá</label>
            </th>


            <th>
                <label>Tùy chọn</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDH)
            </td>
            <td>
                <img width="50" height="70" src="@Url.Content("~/Content/images/" + item.Anhbia)" alt="">
            </td>
            <td>
                <img width="50" height="70" src="@Url.Content("~/Content/images/" + item.Anh1)" alt="">
            </td>
            <td>
                <img width="50" height="70" src="@Url.Content("~/Content/images/" + item.Anh2)" alt="">
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.NHASANXUAT.TenNSX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluongton)
            </td>
            <td>
                

                <span>@string.Format("{0:0,0}", @item.Giaban) VNĐ</span>
            </td>


            <td>
                <button class="btn btn-default">
                    @Html.ActionLink("Sửa", "ChinhSua", new { @masp = item.MaSP })
                </button>
                <button class="btn btn-default">
                    @Html.ActionLink("Chi tiết", "HienThi", new { @masp = item.MaSP })
                </button>
                <button class="btn btn-default">
                    @Html.ActionLink("Xóa", "Xoa", new { @masp = item.MaSP })
                </button>


            </td>
        </tr>
        }
    </tbody>
</table>
@*Tạo link liên kết các trang*@

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("QuanLySanPham", new { @timkiem = @ViewBag.TuKhoa, page = page }))
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>


