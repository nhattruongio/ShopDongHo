@model IEnumerable<WatchStore.Models.KHACHHANG>
@{
    ViewBag.Title = "Đăng ký    ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="banner_inner">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">
            <ul class="short">
                <li>
                    @Html.ActionLink("Trang Chủ", "Index", "WatchStore")
                    <i style="color:black">|</i>
                    @Html.ActionLink("Đăng ký", "Dangky", "Nguoidung")
                </li>
                <li>Đăng ký thành viên</li>
            </ul>
        </div>
    </div>
</div>
<!--//banner -->

<h3 class="tittle-w3layouts text-center my-lg-4 my-4">Đăng ký thành viên</h3>
<div class="alert alert-danger alert-dismissible" role="alert" style="text-align:center ">
    <strong>@ViewBag.Thongbao</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<hr>
<section class="banner-bottom-wthreelayouts py-lg-5 py-3">

    <div class="container">
        <div class="inner_sec">
            <div class="contact_grid_right">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label class="my-2">Họ tên </label>
                                <input class="form-control" type="text" name="HotenKH" placeholder="Nhập họ tên..." required="">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Email / Tên đăng nhập </label>
                                <input class="form-control" type="email" name="TenDN" placeholder="Nhập email / tên đăng nhập..." required="">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Mật khẩu:</label>
                                <input class="form-control" type="password" name="Matkhau" placeholder="Nhập mật khẩu..." required="" style="outline: none;padding: 15px 15px;font-size: 14px;color: #777;background: #f7f7f7;width: 100%;letter-spacing: 1px;border: 1px solid #ebeeef;">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Nhập lại mật khẩu:</label>
                                <input class="form-control" placeholder="Nhập lại mật khẩu..." name="Matkhaunhaplai" type="password" required="" style="outline: none;padding: 15px 15px;font-size: 14px;color: #777;background: #f7f7f7;width: 100%;letter-spacing: 1px;border: 1px solid #ebeeef;">
                                @ViewData["Loi1"]
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label class="my-2">Email:</label>
                                <input class="form-control" placeholder="Nhập Email..." name="Email" type="email" required="">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Số điện thoại:</label>
                                <input class="form-control" placeholder="Nhập sđt..." name="Dienthoai" type="tel" required="" style="outline: none;padding: 15px 15px;font-size: 14px;color: #777;background: #f7f7f7;width: 100%;letter-spacing: 1px;border: 1px solid #ebeeef;">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Ngày sinh:</label>
                                <input class="form-control" type="date" name="Ngaysinh" style="outline: none;padding: 15px 15px;font-size: 14px;color: #777;background: #f7f7f7;width: 100%;letter-spacing: 1px;border: 1px solid #ebeeef;" />
                            </div>
                            <div class="form-group">
                                <label class="my-2">Địa chỉ:</label>
                                <input class="form-control" placeholder="Nhập địa chỉ..." type="text" name="Diachi" style="outline: none;padding: 15px 15px;font-size: 14px;color: #777;background: #f7f7f7;width: 100%;letter-spacing: 1px;border: 1px solid #ebeeef;" required="" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <input class="form-control" type="submit" value="Đăng ký" />
                }

            </div>
        </div>
    </div>
</section>
<hr>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>


